{% extends "base.template.twig" %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <div class="container">
        <h2>{{ title }}</h2>
    </div>
    <div class="cards container">
   {% for item in data %}
    <div class="card mb-2 p-4">
        <h4 class="card-title">{{item.citation}}</h4>
        <div class="small">
            {{item.date_modif|date("d/m/Y")}}
        </div>
        <div class="actions ms-auto">
            <a href="/citation/modifier/{{item.id}}" class="card-link">Modif</a>
            <a href="/citation/supprimer/{{item.id}}" class="card-link">Supp</a>
        </div>
    </div>
   {% endfor %}
   </div>

{% endblock %}

