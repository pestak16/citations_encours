{% extends "base.template.twig" %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <div class="container">
        <h2>{{ title }}</h2>
    </div>
    <div class="cards container">
   {% for item in data %}
    <div class="card mb-2 p-4">
        <h4 class="card-title">
            {{item.prenom|slice(0, 1)|capitalize }}{{item.prenom|slice(1)}} 
            {{item.nom|slice(0, 1)|capitalize }}{{item.nom|slice(1)}} 
        </h4>
        <div class="small">
            {{item.mail}}
            <p>Admin : {{item.is_admin}}</p>
        </div>
        <div class="actions ms-auto">
            <a href="/utilisateur/modifier/{{item.id}}" class="card-link">Modif</a>
            <a href="/utilisateur/supprimer/{{item.id}}" class="card-link">Supp</a>
        </div>
    </div>
   {% endfor %}
   </div>

{% endblock %}